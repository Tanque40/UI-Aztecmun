<% if !@presentes.blank? && @activeTopic %>
    <div id="topico">
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card card1">
                    <div class="card-content">
                        <% if esCDE? %>
                            <span class="card-title">Tema:</span>
                        <% elsif  esCIJ? %>
                            <span class="card-title">Caso Único:</span>
                        <% else %>
                            <span class="card-title">Topic:</span>
                        <% end %>
                        <div class="center-align negritas">
                            <%= @topic %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% elsif !@presentes.blank? %>
<script type="text/javascript">
    swal({
        title: '<%= (esNATO?)? "You should establish agenda" : "Se debe establecer agenda" %>',
        type: 'warning'
    });
</script>
    <div id="elegirTopic">
        <div class="row">
            <div class="col s8 offset-s2">
                <div class="card">
                    <div class="card-content">
                        <% if esCDE? %>
                            <span class="card-title">Temas:</span>
                        <% elsif  esCIJ? %>
                            <span class="card-title">Caso Único:</span>
                        <% else %>
                            <span class="card-title">Topics:</span>
                        <% end %>
                        <div class="card-content">
                            <div class="row">
                                <% @topico.each do |t|%>
                                    <% logger.info(t.id) %>
                                    <%= link_to topic_path(t.id), :class => "black-text" do%>
                                        <div class="col s6">
                                            <div class="card hoverale card1">
                                                <div class="card-content">
                                                    <% if esCDE? %>
                                                        <span class="card-title">Tema:</span>
                                                    <% else %>
                                                        <span class="card-title">Topic:</span>
                                                    <% end %>
                                                    <div class="center">
                                                        <%= t.topico %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>
                                <% end %>
                            </div>
                        </div>
                        <div class="card-action">
                            <div class="center">
                                <a href="" data-remote="true" onclick="votacion('<%= (esNATO?)? "Opening of topic" : "Apertura de tema" %>')" class="waves-effect waves-light btn blue">Votar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>
