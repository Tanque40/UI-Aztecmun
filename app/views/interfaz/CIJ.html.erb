<%= render :partial => "layouts/navbar" %>
<div id="lista">
    <%= render :partial => "layouts/presentes", delegados: @delegados, presente: @presentes %>
</div>

<div id="time">
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card z-depth-5">
                    <div class="card-content">
                        <%= render :partial => "layouts/timer"%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%= render :partial => "layouts/votacion", presentes: @presentes%>

<script type="text/javascript">
    $('#time').hide();
     if (<%= !@presentes.blank? %>){
        $('#lista').hide();
        $('#time').show();
     }
     $(document).ready(function(){
        $('select').material_select();
      });
</script>
